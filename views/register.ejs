<div class="container login-container">
	<h1 style="display: flex;justify-content: center;margin-bottom:2rem">
	Sign Up
   </h1>
	<form action="/register" method="post" class="form-group text-center" style="width:30%;margin: 0 auto;">
	<input type="text" name="username" placeholder="username" style="margin-bottom:1rem;" required class="form-control">
	<input type="password" name="password" placeholder="password" style="margin-bottom:1rem;" required class="form-control"> 
	<button class="btn btn-primary ">
		Sign Up
	</button>
</form>
</div>


